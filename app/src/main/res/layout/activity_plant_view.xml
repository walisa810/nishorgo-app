<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Final_Project.PlantView">

    <ScrollView
        android:id="@+id/svplant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPlantImage"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:background="@drawable/shape"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flowers_main" />

            <TextView
                android:id="@+id/tvPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/tenor_sans"
                android:text="Plant Name"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tvPlantScientificName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPlantScientificName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/tenor_sans"
                android:text="Scientific Name"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlantName" />

            <LinearLayout
                android:id="@+id/llCards"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPlantImage"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="12dp"
                            android:src="@drawable/cloud"/>
                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/tenor_sans"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="humidity"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="12dp"
                            android:src="@drawable/sun"/>
                        <TextView
                            android:id="@+id/tvSunlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/tenor_sans"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="toxicity"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="12dp"
                            android:src="@drawable/water"/>
                        <TextView
                            android:id="@+id/tvWater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="water"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/tenor_sans"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="12dp"
                            android:src="@drawable/toxic"/>
                        <TextView
                            android:id="@+id/tvtoxicity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/tenor_sans"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:text="toxicity"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llCards"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="25sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:fontFamily="@font/tenor_sans"/>
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#333"
                        android:padding="12dp"
                        android:text="Amar Shonar Bangla Ami tomai bhalo bashi Amar Shonar Bangla Ami tomai bhalo bashi Amar Shonar Bangla Ami tomai bhalo bashi"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvDescription"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overview"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:padding="12dp"
                        android:fontFamily="@font/tenor_sans"/>
                    <TextView
                        android:id="@+id/tvOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#333"
                        android:padding="12dp"
                        android:text="Amar Shonar Bangla Ami tomai bhalo bashi Amar Shonar Bangla Ami tomai bhalo bashi Amar Shonar Bangla Ami tomai bhalo bashi"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#91A66C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/svplant">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/ibHome"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons_home"
                android:contentDescription="Navigate to Home"
                android:layout_marginStart="30dp"
                android:background="#91A66C"
                app:tint="#fff"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/ibIButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons_info"
                android:contentDescription="Navigate to Info"
                android:layout_marginStart="30dp"
                android:background="#91A66C"
                app:tint="#fff"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/ibArticle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons_article"
                android:contentDescription="Navigate to Articles"
                android:layout_marginStart="30dp"
                android:background="#91A66C"
                app:tint="#fff"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/ibNotifications"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons_bell"
                android:contentDescription="Navigate to Notifications"
                android:layout_marginStart="30dp"
                android:background="#91A66C"
                app:tint="#fff"
                android:layout_gravity="center"
                />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>